                    @Html.DisplayNameFor(model => model.NameMultiLangJson)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>

                @*<td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WatchWeightStatus)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.NameMultiLangJson)
                    </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ItemTypeID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ItemTypeID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ItemTypeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
