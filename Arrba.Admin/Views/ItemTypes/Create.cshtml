@using Arrba.Admin.ViewModels
@using Arrba.Domain.Models
@model Arrba.Admin.ViewModels.TypeWithCategoryCreate

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ItemType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemTypeName" class="control-label"></label>
                <input asp-for="ItemTypeName" class="form-control" />
                <span asp-validation-for="ItemTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemTypeComment" class="control-label"></label>
                <input asp-for="ItemTypeComment" class="form-control" />
                <span asp-validation-for="ItemTypeComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemTypeStatus" class="control-label"></label>
                <select asp-for="ItemTypeStatus" asp-items="Html.GetEnumSelectList<ActiveStatus>()" class="form-control"></select>
                <span asp-validation-for="ItemTypeStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemTypeWatchWeightStatus" class="control-label"></label>
                <select asp-for="ItemTypeWatchWeightStatus" asp-items="Html.GetEnumSelectList<WatchWeightStatus>()"  class="form-control"></select>
                <span asp-validation-for="ItemTypeWatchWeightStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
            </div>
            @*<div class="form-group">
                    <label asp-for="NameMultiLangJson" class="control-label"></label>
                    <textarea asp-for="NameMultiLangJson" class="form-control"></textarea>
                    <span asp-validation-for="NameMultiLangJson" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
